<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mikez.festpaycustomer.ProductsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/products_button_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:src="@drawable/button_back_accent" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="39dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Products"
            android:textColor="@color/silverDark"
            android:textSize="35dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/products_autocomplete_text_view_search"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/silverDark"
                android:textColorHint="@color/silverDark"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Search" />

            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/products_image_search"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:src="@drawable/icon_search" />
            <ImageView
                android:layout_marginBottom="4dp"
                android:id="@+id/products_image_filter"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_filter"/>
        </LinearLayout>

        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Produs"
                android:textColor="@color/silverDark"/>

            <TextView
                android:textColor="@color/silverDark"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Magazin" />

            <TextView
                android:textColor="@color/silverDark"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Pret" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/products_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
